# PS IntelliHR - Environment Configuration
# Copy this file to .env and configure for your environment

# =============================================================================
# DJANGO SETTINGS
# =============================================================================
DEBUG=True
# SECRET_KEY is required in production! Use 'python -c "import secrets; print(secrets.token_urlsafe(50))"' to generate one.
SECRET_KEY=your-super-secret-key-change-in-production
DJANGO_SETTINGS_MODULE=config.settings.development
LOG_TARGET=console # Set to 'file' if not running in Docker

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_DB=ps_intellihr
POSTGRES_USER=hrms_admin
POSTGRES_PASSWORD=password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# =============================================================================
# REDIS & CELERY
# =============================================================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# SECURITY
# =============================================================================
ALLOWED_HOSTS=localhost,127.0.0.1,.example.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
# Field-level encryption key (32 bytes base64)
FIELD_ENCRYPTION_KEY=gvzPBJb7WHy_HzVU0XUD_-hmJ9b9JjX9heqeizdIJ6g=

# =============================================================================
# JWT SETTINGS
# =============================================================================
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7
JWT_SIGNING_KEY=your-jwt-signing-key

# =============================================================================
# EMAIL (SMTP)
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=PS IntelliHR <noreply@example.com>

# =============================================================================
# AWS S3 (Optional - for file storage)
# =============================================================================
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=ap-south-1

# =============================================================================
# AI SERVICES
# =============================================================================
OPENAI_API_KEY=
GOOGLE_AI_API_KEY=
AI_RESUME_PARSING_ENABLED=True
AI_ATTRITION_PREDICTION_ENABLED=True
AI_CHATBOT_ENABLED=True

# =============================================================================
# INTEGRATIONS
# =============================================================================
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=
TEAMS_APP_ID=
TEAMS_APP_SECRET=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# =============================================================================
# MONITORING (Production)
# =============================================================================
SENTRY_DSN=
PROMETHEUS_METRICS_ENABLED=False

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_PAYROLL_ENABLED=True
FEATURE_RECRUITMENT_ENABLED=True
FEATURE_PERFORMANCE_ENABLED=True
FEATURE_AI_SERVICES_ENABLED=True
