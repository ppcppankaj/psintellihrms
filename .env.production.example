########################################
# ENVIRONMENT
########################################
ENVIRONMENT=production
DEBUG=False


########################################
# DJANGO CORE SECURITY
########################################
SECRET_KEY=your-very-long-random-secret-key
FIELD_ENCRYPTION_KEY=your-44-char-base64-key

ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com
BASE_DOMAIN=yourdomain.com


########################################
# DATABASE (POSTGRESQL)
########################################
POSTGRES_DB=ps_intellihr
POSTGRES_USER=hrms_admin
POSTGRES_PASSWORD=your-db-password
DB_HOST=your-db-host
DB_PORT=5432


########################################
# REDIS / CELERY / CHANNELS
########################################
REDIS_URL=redis://redis:6379

CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Cache
CACHE_URL=redis://redis:6379/2

# Channels
CHANNEL_REDIS_URL=redis://redis:6379/3


########################################
# MULTI-TENANCY & DATA ISOLATION
########################################
REQUIRE_ORGANIZATION_CONTEXT=True
ENABLE_POSTGRESQL_RLS=True


########################################
# AUTH / JWT
########################################
ACCESS_TOKEN_LIFETIME_MINUTES=30
REFRESH_TOKEN_LIFETIME_DAYS=7


########################################
# CORS / CSRF
########################################
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
CORS_ALLOW_CREDENTIALS=True

CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com


########################################
# COOKIE & HTTPS SECURITY (CRITICAL)
########################################
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

SESSION_COOKIE_HTTPONLY=True
CSRF_COOKIE_HTTPONLY=True

SESSION_COOKIE_SAMESITE=Lax
CSRF_COOKIE_SAMESITE=Lax


########################################
# SECURITY HEADERS
########################################
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

X_FRAME_OPTIONS=DENY
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin


########################################
# EMAIL (SMTP - SSL)
########################################
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

EMAIL_HOST=mail.pankaj.im
EMAIL_PORT=465
EMAIL_USE_SSL=True
